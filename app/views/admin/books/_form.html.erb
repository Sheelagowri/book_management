<%= form_with(model: @book, url: (book.new_record? ? admin_books_path : admin_book_path(book)), local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, :required => true %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, :required => true %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>

  <div class="field">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all,:id,:name, include_blank: false %>
  </div>
  
  <%= image_tag(@book.image, style: 'max-height:200px;width:auto;') if @book&.image&.persisted? %>
<div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
