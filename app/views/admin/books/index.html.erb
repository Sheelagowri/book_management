<p id="notice"><%= notice %></p>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Content</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.price %></td>
        <td><%= book.content %></td>
        <td><%= book.category.name %></td>
        <td><%= image_tag(book.image, style: 'max-height:200px;width:auto;') if book.image.persisted? %></td>
        <td><%= link_to 'EDIT', edit_admin_book_path(book) %></td>
        <td><%= link_to 'DELETE', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' }%> </td>
      </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Add New Book', new_admin_book_path %><br>
